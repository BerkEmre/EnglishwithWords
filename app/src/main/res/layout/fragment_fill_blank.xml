<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antika.berk.engcardbegin.TestFragment"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/onkart"
            android:padding="20dp"
            android:id="@+id/card_layout1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView5" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:background="@drawable/hint2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="25dp"
                android:layout_width="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/onkart"
            android:padding="20dp"
            android:id="@+id/card_layout2"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/card_layout1"
            android:layout_alignStart="@+id/card_layout1">

            <ImageButton
                android:id="@+id/imageButton2"
                android:background="@drawable/hint2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="25dp"
                android:layout_width="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button3"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_width="300dp" />

            <Button
                android:id="@+id/button4"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_width="300dp" />

            <Button
                android:id="@+id/button5"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_width="300dp" />

            <Button
                android:id="@+id/button6"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_width="300dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
