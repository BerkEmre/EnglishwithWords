<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/root"
    tools:context="com.antika.berk.engcardbegin.CardFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/arkakartlar"
            android:padding="45dp"
            android:layout_alignTop="@+id/card_layout_1"
            android:layout_alignLeft="@+id/card_layout_1"
            android:layout_alignStart="@+id/card_layout_1">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/card_layout_1"
            android:background="@drawable/arkakart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/oval_icon"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_height="50dp"
                android:id="@+id/imageButton1"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:background="@drawable/speaker_background" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/card_layout_2"
            android:background="@drawable/arkakart"
            android:padding="20dp"
            android:layout_alignTop="@+id/card_layout_1"
            android:layout_alignLeft="@+id/card_layout_1"
            android:layout_alignStart="@+id/card_layout_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:background="@drawable/speaker_background" />

        </RelativeLayout>

        <Button
            android:text="@string/turn_back"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@drawable/button_background"
            android:layout_below="@+id/card_layout_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</RelativeLayout>
